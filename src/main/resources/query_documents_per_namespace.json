{
  "size": 0,
  "query": {
    "range": {
      "@timestamp": {
        "gte": "now-24h",
        "lte": "now"
      }
    }
  },
  "aggs": {
    "Histogram": {
      "date_histogram": {
        "field": "@timestamp",
        "interval": "hour"
      },
      "aggs": {
        "top_namespaces": {
          "terms": {
            "size": 1000,
            "order": {
              "_count": "desc"
            },
            "field": "kubernetes.namespace_name"
          }
        },
        "namespace_count": {
          "cardinality": {
            "field": "kubernetes.namespace_name"
          }
        }
      }
    }
  }
}